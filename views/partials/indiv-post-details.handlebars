<section>
    <section>
        <header><h1>{{title}}</h1></header>
        <p>{{post_content}}</p>
        <p>{{user.username}} - {{format_date created_at}}</p>
        <form id="new-comment-form" class="card-body">
            <div>
                <textarea name="comment" id="content-input" cols="30" rows="1" placeholder="Comment on this post!"></textarea>
            </div>
            <button type="submit" id="new-comment-btn" class="btn">Submit</button>
        </form>
    </section>
    {{#each comments as |comment|}}
    <section>
        <header>
            {{comment.user.username}} - {{format_date comment.created_at}}
        </header>
        <p>{{comment.comment_content}}</p>
    </section>
    {{/each}}
</section>

<script src="/js/newComment.js"></script>